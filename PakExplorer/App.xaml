<Application
    x:Class="PakExplorer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Color x:Key="AccentColor">#FF0A5BC4</Color>
                    <SolidColorBrush x:Name="AccentBrush" Color="{StaticResource AccentColor}"/>
                </ResourceDictionary>
                <ResourceDictionary Source="Styles/PivotStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
